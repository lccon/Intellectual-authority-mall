<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.mapper.FreeMessageMapper">
    <resultMap id="freeMessageMap" type="com.mall.domain.FreeMessage">
        <id property="id" column="id"/>
        <result property="messageContent" column="message_content"/>
        <result property="identity" column="identity"/>
        <result property="messageState" column="message_state"/>
        <result property="browseVolume" column="browse_volume"/>
        <result property="createUser" column="create_user"/>
        <result property="createDate" column="create_date"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <sql id="columns">
        id, message_content, identity, message_state, browse_volume, create_user, create_date, update_user, update_date
    </sql>

    <insert id="addFreeMessage" parameterType="com.mall.domain.FreeMessage">
        <selectKey keyProperty="id" resultType="java.lang.Long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO free_message
        (id, message_content, identity, message_state, browse_volume, create_user, create_date)
        VALUES
        (#{id}, #{messageContent}, #{identity}, #{messageState}, #{browseVolume}, #{createUser}, #{createDate})
    </insert>

    <update id="updateFreeMessage" parameterType="com.mall.domain.FreeMessage">
        UPDATE free_message
        <set>
            <if test="messageContent != null and messageContent != ''">
                message_content = #{messageContent},
            </if>
            <if test="identity != null">
                identity = #{identity},
            </if>
            <if test="messageState != null">
                message_state = #{messageState},
            </if>
            <if test="browseVolume != null">
                browse_volume = #{browseVolume},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteFreeMessage">
        DELETE FROM free_message
        where id IN
        <foreach collection="array" index="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="findFreeMessageForList" resultMap="freeMessageMap">
        SELECT
        <include refid="columns"/>
        FROM free_message
    </select>

    <select id="getFreeMessageById" parameterType="java.lang.Long" resultMap="freeMessageMap">
        SELECT
        <include refid="columns"/>
        FROM free_message
        WHERE id = #{id}
    </select>

</mapper>